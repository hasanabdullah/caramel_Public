<!doctype html>
<html>

<head>
    <title>Log In - Caramel</title>
    <link rel="stylesheet" type="text/css" href="/css/modern-styles.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/public/javascripts/index/shop-login.js"></script>
</head>
<body>

<body>

<div class="top-header">
    <div class="header-logo">

    </div>
    <div class="header-navigation">
    </div>
    <div class="header-right" style="width: 300px">
        <p style="float: left;margin-right: 30px"><a href="/customer-login">CUSTOMER LOGIN</a></p>
        <p style="float: left"><a class="active" href="/shop-register">SIGN UP</a></p>
    </div>
</div>

<div class="container-main" style="float: left;width: 50%">
    <h1 style="text-align: left;font-family: inherit; margin-top: 150px;margin-left: 30%;font-size: 24px;margin-bottom: -30px">
        Welcome to</h1>
    <h1 style="text-align: left;font-family: 'Lobster';margin-left: 30%;font-size: 92px;margin-top:0">caramel</h1>
</div>


<div class="container-main" style="float:left; width: 50%">

    <div class="container-body" style="width: 300px">
        <h5 style="font-size: 22px;margin-bottom: 50px;text-transform: none; color: #666; font-weight: 300">Shop Sign
            In</h5>
        <% if (message) { %>
            <%= message %>
        <% } %>
        <% if(success) { %>
            <%= success %>
        <% } %>

        <form action="/shop-login" method="post">
            <input type="text" style="width: 300px" name="email">
            <h4>Email</h4>
            <input type="password" style="width: 300px" name="password">
            <h4>Password</h4>
            <button type="submit" class="button-normal">Login</button>
        </form>
        <h2 style="font-variant: normal;font-size: 14px; font-weight: 300"><a href="/shop-register" id="redirect">Need
                an account?
                Register</a></h2>
        <h2 style="font-variant: normal;font-size: 14px; font-weight: 300"><a href="/reset/shop">Forgot Password?</a>
        </h2>
        <h2 style="font-variant: normal;font-size: 14px; font-weight: 300"><a href="/">Are you a Customer? Log In
                Here</a></h2>
    </div>
</div>
</div>
<div class="white-space"></div>
</body>
</html>
